<%- include('partials/header') %>

<div class="container">
  <div class="jumbotron centered">
    <i class="fas fa-hospital-user"></i>
    <h2 class="display-3">HEALTH DATA EMPOWERMENT</h2>
    <p class="secret-text">Your Data is in safe hands.</p>

    <form action="/submit" method="POST">
      <div class="form-group">
      <input type="text" class="form-control text-center" name="secret" placeholder="Document ID">
      </div>
      <div class="form-group">
        <label for="img">UPLOAD Document:</label>
        <input type="file" id="img" name="img" accept="image/*">
        <input type="submit">
      </div>
      <button type="submit" class="btn btn-dark">Submit</button>
    </form>


  </div>
</div>
